@page
@model StreamScore.Pages.StreamModel
@{
}

<style>

  /*https://grid.layoutit.com/*/

  @@font-face {
   font-family: myFirstFont;
   src: url(/font/Segoe-UI-Bold.ttf);
  }

  body {
    background-color: #00b140; /*chroma key green*/
    /*background-color: rgba(0, 0, 0, 0);*/
    margin: 0px auto;
    overflow: hidden;

    height: 100vh;
    width: 100vw;

    font-family: myFirstFont;

    display: grid;
    grid-template-columns: 40px 128px 1fr 128px 40px;
    grid-template-rows: 40px 80px 1fr 80px 40px;
    gap: 0px 0px;
    grid-auto-flow: row;
    grid-template-areas:
      ". . . . ."
      ". header header header ."
      ". left    main  right ."
      ". footer footer footer ."
      ". . . . .";
  }

  .header {
    grid-area: header;
    /*background: red;*/
    display: grid;
    grid-template-columns: minmax(102px, max-content) minmax(102px, max-content) minmax(102px, max-content) minmax(128px, max-content) auto;
    grid-template-rows: 56px 24px;
    gap: 0px 0px;
    grid-auto-flow: row;
    grid-template-areas:
      "thuis score uit tijd schot"
      "w1   wissel w2 helft .";
    font-weight: bold;
  }

  #team1 {
    grid-area: thuis;
    background-color: grey;
    color: white;
    text-transform: uppercase;
    text-align: center;
    line-height: 56px;
    font-size: 30px;
    padding: 0 16px;
  }
  #score {
    grid-area: score;
    background-color: black;
    color: white;
    text-transform: uppercase;
    text-align: center;
    line-height: 56px;
    font-size: 30px;
    padding: 0 16px;
  }
  #team2 {
    grid-area: uit;
    background-color: grey;
    text-transform: uppercase;
    text-align: center;
    line-height: 56px;
    font-size: 30px;
    padding: 0 16px;
    color: white;
  }
  #tijd {
    grid-area: tijd;
    background-color: black;
    color: white;
    text-transform: uppercase;
    text-align: center;
    line-height: 56px;
    font-size: 30px;
    padding: 0 16px;
  }

  #w1 {
    grid-area: w1;
    background-color: black;
    color: white;
    text-align: center;
    line-height: 24px;
    font-size: 16px;
    padding: 0 8px;
  }

  #helft {
    grid-area: helft;
    background-color: grey;
    color: white;
    text-align: center;
    line-height: 24px;
    font-size: 16px;
  }
  #wissel {
    grid-area: wissel;
    background-color: grey;
    color: white;
    text-align: center;
    line-height: 24px;
    font-size: 16px;
  }
  #w2 {
    grid-area: w2;
    background-color: black;
    color: white;
    text-align: center;
    line-height: 24px;
    font-size: 16px;
    padding: 0 8px;
  }


  .footer {
    grid-area: footer;
    background: black;
  }



</style>

<div class="header">

  <div id="team1"></div>
  <div id="score"></div>
  <div id="team2"></div>
  <div id="tijd"></div>

  <div id="w1"></div>
  <div id="wissel"></div>
  <div id="w2"></div>

  <div id="helft"></div>

</div>

<div class="footer">

</div>


<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/stream.js"></script>